<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="LibraryManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LibraryManager.Views"
    FlyoutHeaderBehavior="CollapseOnScroll"
    Shell.FlyoutBehavior="Disabled">
    <Shell.Resources>
        <Style TargetType="Label" Class="FlyoutItemLabelStyle">
            <Setter Property="FontFamily" Value="ManropeExtraLight" />
            <Setter Property="FontSize" Value="22" />
        </Style>
        <Style TargetType="TabBar">
            <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource Primary}" />
            <Setter Property="Shell.TabBarForegroundColor" Value="{StaticResource White}" />
            <Setter Property="Shell.TabBarTitleColor" Value="{StaticResource Tertiary}" />
            <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource Tertiary}" />
        </Style>

    </Shell.Resources>

    <!-- To show in side bar - <FlyoutItem Title="Library"> -->
    <ShellContent
        Route="BooksPage"
        ContentTemplate="{DataTemplate local:BooksPage}" />
    <ShellContent
        Route="LibraryNew"
        ContentTemplate="{DataTemplate local:LibraryNewPage}" />
    
    
    <ShellContent
        Route="Save"
        ContentTemplate="{DataTemplate local:LibrarySavePage}" />
    <ShellContent
        Route="Save As"
        ContentTemplate="{DataTemplate local:LibrarySaveAsPage}" />
    <ShellContent
        Route="Close"
        ContentTemplate="{DataTemplate local:LibraryClosePage}" />

    <ShellContent
        Route="Add new"
        ContentTemplate="{DataTemplate local:LibraryNewPage}" />

    <ShellContent
        Route="Edit Book"
        ContentTemplate="{DataTemplate local:LibraryNewPage}" />
    <ShellContent
        Route="Delete Book(s)"
        ContentTemplate="{DataTemplate local:LibraryNewPage}" />
    <ShellContent
        Route="Import Book"
        ContentTemplate="{DataTemplate local:LibraryNewPage}" />
    <ShellContent
        Route="Export Book"
        ContentTemplate="{DataTemplate local:LibraryNewPage}" />
    <ShellContent
        Route="Sort Books"
        ContentTemplate="{DataTemplate local:LibraryNewPage}" />

</Shell>