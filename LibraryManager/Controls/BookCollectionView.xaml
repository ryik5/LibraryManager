<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:control="clr-namespace:LibraryManager.Controls"
             x:Class="LibraryManager.Controls.BookCollectionView">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            
            <CollectionView x:Name="BooksCollectionView"
                            ItemsSource="{Binding Source={RelativeSource TemplatedParent}, Path=BookCollection}"
                            SelectionMode="Multiple"
                            SelectionChanged="OnCollectionViewSelectionChanged"
                            SelectionChangedCommand="{Binding Source={RelativeSource TemplatedParent}, Path=SelectionInBookCollectionChangedCommand}"
                            SelectionChangedCommandParameter="{Binding Path=SelectedItems, Source={RelativeSource Self}}"
                            ItemSizingStrategy="MeasureAllItems"
                            EmptyView="No books in Collection">
                
                <CollectionView.Header>
                    <!--Doesn't work the proper way-->
                    <Grid HorizontalOptions="Fill" ColumnDefinitions="150,500,70,110,70,150,100,180,Auto"
                          Background="{StaticResource Senary}" Padding="5">
                        <Grid.Resources>
                            <Style TargetType="Label">
                                <Setter Property="HorizontalTextAlignment" Value="Center" />
                                <Setter Property="Padding" Value="5,0,5,0" />
                            </Style>
                        </Grid.Resources>
                        <Label Grid.Column="0" FontSize="18" Text="Author" HorizontalTextAlignment="Start" BackgroundColor="Transparent"/>
                        <!--<Rectangle Grid.Column="0" Margin="0,0,5,0" VerticalOptions="Center" HorizontalOptions="End" WidthRequest="2" HeightRequest="25"
                              BackgroundColor="{StaticResource Secondary}"/>-->
                        <Label Grid.Column="1" FontSize="18" Text="Title" HorizontalTextAlignment="Start" />
                        <Label Grid.Column="2" FontSize="18" Text="Year" />
                        <Label Grid.Column="3" FontSize="18" Text="Genre" />
                        <Label Grid.Column="4" FontSize="18" Text="Pages" />
                        <Label Grid.Column="5" FontSize="18" Text="Description" />
                        <Label Grid.Column="6" FontSize="18" Text="ISBN" />
                        <Label Grid.Column="7" FontSize="18" Text="File Name" HorizontalTextAlignment="Start" />
                        <Label Grid.Column="8" FontSize="18" Text="StoredSeparately" />
                    </Grid>
                </CollectionView.Header>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <control:BookGridView BindingContext="{Binding}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroupList>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <!-- Normal State -->
                                        <VisualState x:Name="Normal">
                                            <VisualState.Setters>
                                                <!-- Default unselected and unpressed color -->
                                                <Setter Property="BackgroundColor" Value="Transparent" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <!-- Selected State -->
                                        <VisualState x:Name="Selected">
                                            <VisualState.Setters>
                                                <!-- Color when the row is selected -->
                                                <Setter Property="BackgroundColor" Value="{StaticResource Tertiary}" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateGroupList>
                            </VisualStateManager.VisualStateGroups>
                        </control:BookGridView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                
            </CollectionView>
            
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>