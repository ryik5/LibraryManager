<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LibraryManager.Controls.StatusBarPanel">
    
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <Label SemanticProperties.Description="CommonInfo"
                    Text="{Binding Source={RelativeSource TemplatedParent}, Path=CommonInfo}" 
                    Grid.Column="0"/>
                <Label 
                    Text="{Binding Source={RelativeSource TemplatedParent}, Path=CurrentInfo}" 
                    Grid.Column="1"/>
                <Label 
                    Text="{Binding Source={RelativeSource TemplatedParent}, Path=Status}" 
                    Grid.Column="2"/>
            </Grid>
        </ControlTemplate>
        </ContentView.ControlTemplate>
</ContentView>