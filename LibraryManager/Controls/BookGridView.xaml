<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:LibraryManager.Models"
             x:Class="LibraryManager.Controls.BookGridView"
             x:DataType="model:Book">

   
    <!--Doesn't work the proper way-->
    <Grid HorizontalOptions="Fill" ColumnDefinitions="150,500,70,110,70,100,100,100,Auto">
        <Grid.Resources>
            <Style TargetType="Label">
                <Setter Property="Padding" Value="5"/>
            </Style>
        </Grid.Resources>
        <Label Grid.Column="0" FontSize="18" Text="{Binding Author}" FontAttributes="Bold" LineBreakMode="TailTruncation"/>
        <Label Grid.Column="1" FontSize="18" Text="{Binding Title}" LineBreakMode="TailTruncation"/>
        <Label Grid.Column="2" FontSize="18" Text="{Binding Year}" LineBreakMode="TailTruncation" HorizontalTextAlignment="Center"/>
        <Label Grid.Column="3" FontSize="18" Text="{Binding Genre}" LineBreakMode="TailTruncation" HorizontalTextAlignment="Center"/>
        <Label Grid.Column="4" FontSize="18" Text="{Binding TotalPages}" LineBreakMode="TailTruncation" HorizontalTextAlignment="Center"/>
        <Label Grid.Column="5" FontSize="18" Text="{Binding Description}" LineBreakMode="TailTruncation"/>
        <Label Grid.Column="6" FontSize="18" Text="{Binding ISBN}" LineBreakMode="TailTruncation" HorizontalTextAlignment="Center"/>
        <Label Grid.Column="7" FontSize="18" Text="{Binding Content.Name}" 
               ToolTipProperties.Text="{Binding Content.OriginalPath, Mode=OneWay}" LineBreakMode="TailTruncation"/>
        <Label Grid.Column="8" FontSize="18" Text="{Binding Content.IsContentStoredSeparately}" LineBreakMode="TailTruncation"/>
    </Grid>

</ContentView>